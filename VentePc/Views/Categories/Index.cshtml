@model IEnumerable<VentePc.Models.Categorie>

@{
    ViewData["Title"] = "Liste des categories ";
}

<h1>Liste des categories</h1>

<p>
    <i class="fas fa-plus-circle"></i> <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCategorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCategorie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategorieId"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.CategorieId"><i class="fas fa-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.CategorieId"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
