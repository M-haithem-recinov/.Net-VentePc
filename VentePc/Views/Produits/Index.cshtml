@model IEnumerable<VentePc.Models.Produit>

@{
    ViewData["Title"] = "Listes des produits";
}

<h1>Listes des produits</h1>

<p>
    <i class="fas fa-plus-circle"></i> <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomProduit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomProduit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.NomCategorie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProduitId"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.ProduitId"><i class="fas fa-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ProduitId"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
