@model IEnumerable<VentePc.Models.Vente>

@{
    ViewData["Title"] = "Liste des ventes ";
}

<h1>Liste des ventes</h1>


<p>
    <i class="fas fa-plus-circle"></i> <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateVente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Produit.NomProduit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.NomClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateVente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenteId"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.VenteId"><i class="fas fa-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.VenteId"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
